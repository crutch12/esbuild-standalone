{
  "name": "esbuild-standalone",
  "version": "0.0.19",
  "type": "module",
  "homepage": "https://github.com/crutch12/esbuild-standalone",
  "repository": "crutch12/esbuild-standalone",
  "author": "Konstantin Barabanov <criitch@yandex.ru>",
  "description": "esbuild-standalone provides a standalone build of Esbuild for use in browsers. Made with Service Worker and esbuild-wasm.",
  "dependencies": {
    "@inquirer/confirm": "^5.1.20",
    "picocolors": "^1.1.1",
    "yargs": "^18.0.0"
  },
  "exports": {
    ".": "./lib/standalone.js",
    "./sw": "./lib/standalone-sw.js",
    "./sdk": "./lib/sdk/index.js",
    "./service-worker.mjs": "./service-worker.mjs"
  },
  "files": [
    "lib",
    "umd",
    "README.md",
    "service-worker.js",
    "service-worker.mjs",
    "bin"
  ],
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "esbuild-plugin-umd-wrapper": "^3.0.0",
    "http-server": "^14.1.1",
    "rimraf": "^6.1.0",
    "tsup": "^8.5.1"
  },
  "scripts": {
    "build": "rimraf ./umd && tsup",
    "dev": "rimraf ./umd && tsup --watch",
    "test": "npm run test:e2e",
    "test:e2e": "dotenvx run -- npx playwright test --ui",
    "prepublishOnly": "npm run build"
  }
}